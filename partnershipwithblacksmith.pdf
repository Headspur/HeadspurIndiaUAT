    <script>
      const timeLine = gsap.timeline();

      // const heroAnimation = document.querySelectorAll(".heroBannerServices h1");
      timeLine
        .from(".header", {
          opacity: 0,
          delay: 0.5,
        })
        .from(".heroBannerServices h1", {
          opacity: 0,
          stagger: 0.05,
        })
        .from(".greybg", {
          opacity: 0,
          y: 100,
        });

      gsap.registerPlugin(ScrollTrigger);

      document.addEventListener("DOMContentLoaded", function () {
        const text = document.querySelectorAll(".text-animation");

        text.forEach((text) => {
          const textContent = text.textContent;
          const spannedText = textContent
            .split("")
            .map((char) => `<span>${char}</span>`)
            .join("");

          text.innerHTML = spannedText;

          gsap.to(text.querySelectorAll("span"), {
            scrollTrigger: {
              trigger: text,
              start: "top bottom",
              end: "bottom 60%",
              scrub: 0.5,
            },
            stagger: 0.1,

            opacity: 1,
          });
        });
      });

      document.addEventListener("DOMContentLoaded", function () {
        const animationContainers = document.querySelectorAll(
          ".animation-container"
        );

        animationContainers.forEach((animationContainer) => {
          gsap.from(animationContainer.children, {
            y: 50,
            opacity: 0,
            stagger: 0.25,
            duration: 1,

            ease: "power2.out",
            scrollTrigger: {
              trigger: animationContainer,
              start: "top 80%",
              end: "top 60%",
              scrub: 0.5,
            },
          });
        });
      });
    </script>
